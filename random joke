from time import sleep
import sys
import random
r = random.randint(1,3)
def joke():
    while True:
        r = random.randint(1,3)
        print("Knock knock")
        response = input("Who's there?(Press Enter to continue...)")
        if r == 1:
            print("Jehovah's Whitness.")
        elif r == 2:
            print("The Church of Jesus Christ of Latter-day Saints.")
        elif r == 3:
            print("The Catholic Church.")
        else:
            break    
        sleep(1)
        print('Hail Satan!')
        sleep(1)
        continue
       
joke()
